<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate @users %>
<%= form_with url: users_path, method: :get, local: true do |f| %>
  <%= f.label :name, "search" %>
  <%= f.text_field :name, value: params[:name] %>
  <%= f.submit "search" %>
<% end %>

<% if @users.any? %>
  <ul>
    <% @users.each do |user| %>
      <li><%= link_to user.name, user %></li>
    <% end %>
  </ul>
<% else %>
  <p>No User</p>
<% end %>

<ul class="users">
  <%= render @users %>
</ul>

<%= will_paginate @users %>