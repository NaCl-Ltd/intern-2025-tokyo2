<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <!-- ここにprofileを追加 -->
      <p>
        <strong>profile:</strong>
        <%= @user.profile.presence || "nodata" %>
      </p>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3> <%= I18n.t("Micropost")%> <%= @user.microposts.count %> </h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <% @microposts %>
    <% end %>
    <li><%= link_to "show more",   microposts_path %></li>
  </div>
  
  
</div>
